{
  "name": "fetch-expanse",
  "version": "1.0.0",
  "description": "FetchExpanse CLI for 2025 invoice/receipt management",
  "main": "dist/desktop/main/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json && mkdir -p dist/src/db && cp -r src/db/migrations dist/src/db/",
    "lint": "eslint . --ext .ts",
    "format": "prettier -w .",
    "expense": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "prepare": "echo 'No husky needed yet'",
    "desktop:dev": "vite",
    "desktop:build": "tsc && mkdir -p dist/src/db && cp -r src/db/migrations dist/src/db/ && vite build && electron-builder",
    "desktop:pack": "npm run desktop:build -- --mac"
  },
  "build": {
    "appId": "com.fetchexpanse.app",
    "productName": "FetchExpanse",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [
    "invoice",
    "receipt",
    "automation",
    "gmail",
    "dropbox"
  ],
  "author": "Avishay",
  "license": "ISC",
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "better-sqlite3": "^12.6.0",
    "commander": "^11.0.0",
    "dompurify": "^3.3.1",
    "dotenv": "^16.0.0",
    "dropbox": "^10.34.0",
    "googleapis": "^126.0.0",
    "moment": "^2.30.1",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  }
}
